.search-box {
  position: relative;
  width: 100%;
  height: 60rpx;
  background: #F2F2F2;
}
.search-box .icon {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    left: 20rpx;
    top: 15rpx;
    font-size: 1em;
}
.search-box input {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 7rpx 60rpx;
    font-size: 26rpx;
}
.search-box .placeholder-class {
    line-height: 60rpx;
}

