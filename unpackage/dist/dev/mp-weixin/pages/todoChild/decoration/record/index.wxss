
.recod{
	font-size: 32rpx;
	background: rgba(242,246,249,1);
}
.recodCard{
	margin: 48rpx 15rpx;
	height: 231rpx;
	background: #FFFFFF;
	border-radius: 20rpx;
	box-shadow: 0 5rpx 10rpx 4rpx rgb(0,0,0,0.1);
	overflow: hidden;
}
.recodCard-hd{
	height: 50rpx;
	padding-top: 12rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
}
.recodCard-hd view{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.recodCard-hd-product{
	position: absolute;
	height: 30rpx;
	background: #2896c7;
	text-align: center;
	font-size: 20rpx;
	width: 120rpx;
	color: #ffffff;
	right: -28.1rpx;
	top: 20rpx;
	-webkit-transform:rotate(45deg);
	        transform:rotate(45deg);
}
.recodCard-bd-hd{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-top: 30rpx;
}
.recodCard-bd-hd view{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	font-size: 24rpx;
	color: #999999;
	text-align: center;
}
.recodCard-bd-bd{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.recodCard-bd-bd view{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.recodCard-bd-bd view:nth-child(2){
	text-align: center;
	padding-left: 160rpx;
}
.recodCard-ft{
	height: 35rpx;
	position: relative;
}
.recodCard-ft-box{
	border: 1px solid #409EFF;
	border-radius: 15rpx;
	color: #409EFF;
	font-size: 24rpx;
	width: 140rpx;
	text-align: center;
	line-height: 35rpx;
	position: absolute;
	right: 40rpx;
}



