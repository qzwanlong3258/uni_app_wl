.application {
  font-size: 32rpx;
  color: #666666;
  background: #e5e5e5;
}
.application_hd {
  height: 485rpx;
  padding: 0 16rpx 0 16rpx;
  background: white;
}
.application_hd_item {
  height: 82rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 82rpx;
  border-bottom: 2rpx solid #e5e5e5;
}
.appli_hd_item_lable {
  -webkit-flex-basis: 200rpx;
          flex-basis: 200rpx;
}
.appli_hd_item_content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.appli_hd_item_content_work {
  position: relative;
}
.application_bd {
  height: 156rpx;
  padding: 0 16rpx 2.5px 16rpx;
  margin: 30rpx 0 30rpx 0;
  background: white;
}
.application_ft {
  height: 587rpx;
  padding: 0 16rpx 0 16rpx;
  background: white;
}
.uni-input-style {
  width: 100%;
}
.input_color {
  color: #dbdbdb;
}
.iconclass {
  position: absolute;
  right: 0;
}
.scroll-view_H {
  /* 文本不会换行，文本会在在同一行上继续，直到遇到 <br> 标签为止。 */
  white-space: nowrap;
  width: 100%;
}
.scroll-view-item_H {
  display: inline-block;
  width: 159rpx;
  height: 195rpx;
  text-align: center;
  margin: 2%  1% 2% 1%;
}
.scroll-view-item_H_icon {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.scroll-view-item_H view {
  box-sizing: border-box;
}
.scroll-view-item_H view:nth-child(1) {
  width: 100%;
  height: 146rpx;
  position: relative;
  background: #e5e5e5;
  border-radius: 10rpx;
}
.scroll-view-item_H view:nth-child(1) image {
  width: 100%;
  height: 146rpx;
  border-radius: 10rpx;
  display: block;
}
.scroll-view-item_H view:nth-child(2) {
  width: 100%;
  height: 49rpx;
}
.btn {
  margin: 0 20rpx 0 20rpx;
  border-radius: 40rpx;
  background: #E8BE2E;
  cursor: pointer;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
}
/* 提示窗口 */
.uni-tip {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 15px;
  width: 300px;
  background-color: #fff;
  border-radius: 10px;
}
.uni-tip-title {
  margin-bottom: 10px;
  text-align: center;
  font-weight: bold;
  font-size: 16px;
  color: #333;
}
.uni-tip-content {
  /* padding: 15px;
	*/
  font-size: 14px;
  color: #666;
}
.uni-tip-group-button {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  margin-top: 20px;
}
.uni-tip-button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  font-size: 14px;
  color: #3b4144;
}

